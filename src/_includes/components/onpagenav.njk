        <div class="onpagenav">
            <ul>
        {% for item in collections.navigation %}
            {% set link_title = item.data.nav.title or item.data.title %}
            <li class="{{ link_title | slugify }}{% if item.url == '/' and page.url == '/' or (item.url != '/' and item.url in page.url) %} current{% endif %}">
                <a href="{{ item.data.nav.away or item.url }}">{{ link_title }}</a>
                <span class="arrow">&#8250;</span>
            </li>
        {% endfor %}
        </ul>
    </div>
    